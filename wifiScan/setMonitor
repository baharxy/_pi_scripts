#!/bin/bash

#scan wlan channels
arr=(`sudo  iw dev wlan0 scan | grep freq: | awk '{print $2}' | sort | uniq  `)
echo  ${arr[*]}





#enable monitor mod
sudo iw phy phy0 interface add mon0 type monitor

#set monitor mode up
#echo "Bringing up monitor mode"
ifconfig mon0 up
